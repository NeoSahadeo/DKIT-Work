ATTEMPT 1:
function highest_grade(grades) then
	highest_grade = -1
	for grade in grades do
		if highest_grade < grade then
			highest_grade = grade
		endif
	endfor
endfunction

input = user_input("Enter grades: ")
grades_list = input.split() # Or similar functions

highest_grade(grades_list)


